"Bazel dependencies"

module(
    name = "rules_distroless",
    version = "0.0.0",
    compatibility_level = 1,
)

bazel_dep(name = "bazel_skylib", version = "1.5.0")
bazel_dep(name = "aspect_bazel_lib", version = "2.9.4")

bazel_lib_toolchains = use_extension("@aspect_bazel_lib//lib:extensions.bzl", "toolchains")
use_repo(bazel_lib_toolchains, "zstd_toolchains")
use_repo(bazel_lib_toolchains, "zstd_linux_amd64")
use_repo(bazel_lib_toolchains, "zstd_linux_arm64")
use_repo(bazel_lib_toolchains, "bsd_tar_toolchains")
use_repo(bazel_lib_toolchains, "bsd_tar_linux_amd64")
use_repo(bazel_lib_toolchains, "bsd_tar_linux_arm64")
use_repo(bazel_lib_toolchains, "yq_linux_amd64")
use_repo(bazel_lib_toolchains, "yq_linux_arm64")

# Dev dependencies
bazel_dep(name = "bazel_features", version = "1.20.0", dev_dependency = True)

apt = use_extension(
    "@rules_distroless//apt:extensions.bzl",
    "apt",
    dev_dependency = True,
)
apt.sysroot(
    name = "clang_toolchain",
    arch = "amd64",
    lock = "//examples/clang_toolchain:focal.lock.json",
    manifest = "//examples/clang_toolchain:focal.yaml",
)
use_repo(
    apt,
    "clang_toolchain",
)
